syntax on
set number
set cursorline
set wrap
set showcmd
set wildmenu
set hlsearch
set incsearch
set ignorecase
set smartcase
set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=2
set laststatus=2

map sl : set splitright<CR>:vsplit<CR>
map sh : set nosplitright<CR>:vsplit<CR>
map sk : set nosplitbelow<CR>:split<CR>
map sj : set splitbelow<CR>:split<CR>

map <SPACE>l <C-w>l
map <SPACE>h <C-w>h
map <SPACE>k <C-w>k 
map <SPACE>j <C-w>j
